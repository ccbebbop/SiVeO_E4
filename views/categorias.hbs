  <!--Modals-->
      <div class="modal fade" id="modal-Agregar">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #28a745; color: white;">
              <h4 class="modal-title">Nueva Categoría.</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" style="color: white;">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                  <div>
                    <label for"id" class="form-label">ID :</label>
                    <input type="text" id="idCategoriaAlta" placeholder="Ingrese ID de categoría">
                  </div>
                  <div class="input-area">
                    <label for="description" class="form-label">Descripción :</label>
                    <textarea id="descripcionCateAlta" rows="5" class="form-control" placeholder="Digite la descripción de la categoría"></textarea>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-success" data-dismiss="modal" onclick="crearCategoria();">Aceptar</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->

<div class="modal fade" id="modal-eliminar">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #dc3545; color: white;">
              <h4 class="modal-title">Eliminar Categoría.</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" style="color: white;">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>¿Está seguro que desea eliminar esta categoría?</p>
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="borrarCategoria();">Eliminar</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
  
   <div class="modal fade" id="modal-modificar">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #007bff; color: white;">
              <h4 class="modal-title">Modificar Categoría.</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" style="color: white;">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="p-6 space-y-4">
                <div class="form-group">
                        <label>ID :</label>
                        <input type="text" id="idCategoriaModificar" type="text" class="form-control"disabled="">
                      </div>
                  <div class="input-area">
                    <label for="description" class="form-label">Descripción :</label>
                    <textarea id="descripcionCategoriaActualizar" rows="5" class="form-control"></textarea>
                  </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="actualizarCategoria();">Guardar</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
