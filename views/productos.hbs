      <div class="container-fluid">

          <div >
            <div class="card">
               <div class="card-header">
  <div style="display: flex; justify-content: space-between;">
    <h2 style="margin-right: auto;">Productos</h2>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-Agregar-Producto">Agregar</button>
  </div>
</div>
              <!-- /.card-header -->
              <div class="card-body">
                <table class="table table-bordered" id="tabla-productos">
                  <thead>
                    <tr>
                      <th >ID</th>
                      <th>Descripcion</th>
                      <th>Proveedor_ID</th>
                      <th >Categoría_ID</th>
                      <th>Precio</th>
                      <th >Acciones</th>
                    </tr>
                  </thead>
